.container
  .content
    .row
      %h2="Graph Search"
    .row
      %form.form-search{:method => "get", :action => "/user/#{current_user.uid}/search"}
        .input-append
          %input.span5.search-query{:type => "text", :value => @q, :name => "q"}
          %button.btn Search           
        Try "friends who like wine", "people who like wine and cheese" 
    .row
      %h2="Cypher Query:"
      = @cypher[0]
      %br
      Parameters:
      = @cypher[1]

    .row
      %table{:class => "table table-striped"}
        %tbody
          - @people.each do |person|
            %tr
              %td
                %a{:href => "/user/#{person[1]}"}
                  %img{:src => (person[3] == "" ? "/images/icon_no_photo_80x80.png" : person[3]) }
                  =person[2]
             
